    "boost": -2
  }
},
{
  "terms": {
    "advertised_areas": [
      {{#each @root.data.location_data.la_point.aggregations.local_authority_areas.buckets}}
        {{{stringify (replace (replace (replace key " and " " & ") "City of " "") " City" "")}}}
        {{#unless @last}},{{/unless}}
      {{/each}}
    ],
    "boost": 2
  }
},
{{/ifAll}}
