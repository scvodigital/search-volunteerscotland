<div class="mdc-select pull-right" data-mdc-auto-init="MDCSelect">
  <span class="mdc-select__dropdown-icon"></span>
  <select class="mdc-select__native-control" id="sort" name="sort" onchange="this.form.submit();">
    {{#ifAny @root.request.params.query.keywords @root.request.params.query.location @root.request.params.query.age_groups @root.request.params.query.themes @root.request.params.query.activities @root.request.params.query.services @root.request.params.query.volunteersearch_types @root.request.params.query.availability ~}}
    <option value="relevance" {{#unless @root.request.params.query.sort}} selected{{/unless}}>Relevance</option>
    {{/ifAny ~}}
    <option value="distance"{{#ifAll (compare (default @root.request.params.query.sort "distance") "===" "distance") @root.request.params.query.lat}} selected{{/ifAll}}{{#if @root.request.params.query.location}}{{#compare @root.request.params.query.location "===" ""}} disabled{{/compare}}{{else}} disabled{{/if}}>Distance</option>
    <option value="newest"{{#compare @root.request.params.query.sort "===" "newest"}} selected{{/compare}}>Newest</option>
    <option value="oldest"{{#compare @root.request.params.query.sort "===" "oldest"}} selected{{/compare}}>Oldest</option>
  </select>
  <div class="mdc-floating-label mdc-select__label--float-above" for="sort">
    Sort by
  </div>
  <div class="mdc-line-ripple"></div>
</div>