<script data-component-config="postcode-lookup" type="javascript/blocked">
  {
    blur: { tasks: ["postcode-lookup"] },
    keyup: { tasks: ["postcode-lookup"] },
  }
</script>

<script data-task="postcode-lookup" type="javascript/blocked">
{
  type: "multiTask",
  config: {
    tasks: [
      {
        type: "switch",
        config: {
          which: { __template: "{{#regexMatch (jquery '#location_postcode' 'val') '[a-z]{1,2}[0-9]{1,2}[a-z]?\\s?[0-9][a-z]{2}' 'ig'}}check{{/regexMatch}}" },
          branches: {
            default: {
              tasks: [
                {
                  type: "elementManipulator",
                  config: {
                    "#postcode-validation-icon": {
                      addClass: [ "fa-times", "text-error" ],
                      removeClass: [ "loading", "fa-check", "text-primary", "text-success" ]
                    },
                    "#local_authority": {
                      value: ""
                    },
                    "#coordinates": {
                      value: ""
                    },
                    "#constituency": {
                      value: ""
                    },
                    "#nuts_3": {
                      value: ""
                    },
                    "#ward": {
                      value: ""
                    },
                    "#simd_datazone": {
                      value: ""
                    },
                    "#simd_decile": {
                      value: ""
                    },
                    "#simd_quintile": {
                      value: ""
                    },
                    "#simd_vigintile": {
                      value: ""
                    },
                    "#simd_rank": {
                      value: ""
                    },
                    "#postcode-validation-message": {
                      addClass: [ "hidden" ],
                      contents: { __template: "" }
                    },
                    "#postcode-wrapper": {
                      removeClass: [ "has-error" ]
                    }
                  }
                }
              ]
            },
            check: {
              __doNotCompile: true,
              tasks: [
                {
                  type: "elementManipulator",
                  config: {
                    "#postcode-validation-icon": {
                      addClass: [ "loading", "text-primary" ],
                      removeClass: [ "fa-check", "fa-times", "text-error", "text-success" ]
                    }
                  }
                },
                {
                  name: "postcodeLookup",
                  type: "request",
                  config: { url: { __template: "/postcode-lookup?q={{jquery rootElement 'val'}}" } }
                },
                {
                  __doNotCompile: true,
                  type: "switch",
                  config: {
                    which: { __template: "{{#any data.postcodeLookup}}found{{/any}}" },
                    branches: {
                      default: {
                        tasks: [
                          {
                            type: "elementManipulator",
                            config: {
                              "#local_authority": {
                                value: ""
                              },
                              "#coordinates": {
                                value: ""
                              },
                              "#constituency": {
                                value: ""
                              },
                              "#nuts_3": {
                                value: ""
                              },
                              "#ward": {
                                value: ""
                              },
                              "#simd_datazone": {
                                value: ""
                              },
                              "#simd_rank": {
                                value: ""
                              },
                              "#postcode-validation-message": {
                                addClass: [ "hidden" ],
                                contents: { __template: "" }
                              },
                              "#postcode-wrapper": {
                                removeClass: [ "has-error" ],
                              },
                              "#postcode-validation-icon": {
                                addClass: [ "fa-times", "text-error" ],
                                removeClass: [ "loading", "fa-check", "text-primary", "text-success" ]
                              }
                            }
                          }
                        ]
                      },
                      found: {
                        tasks: [
                          {
                            __doNotCompile: true,
                            type: "switch",
                            config: {
                              which: { __template: "{{#eq data.postcodeLookup.[0].country 'Scotland'}}scotland{{/eq}}" },
                              branches: {
                                default: {
                                  tasks: [
                                    {
                                      type: "elementManipulator",
                                      config: {
                                        "#local_authority": {
                                          value: ""
                                        },
                                        "#coordinates": {
                                          value: ""
                                        },
                                        "#constituency": {
                                          value: ""
                                        },
                                        "#nuts_3": {
                                          value: ""
                                        },
                                        "#ward": {
                                          value: ""
                                        },
                                        "#simd_datazone": {
                                          value: ""
                                        },
                                        "#simd_rank": {
                                          value: ""
                                        },
                                        "#postcode-validation-message": {
                                          removeClass: [ "hidden" ],
                                          contents: { __template: "This postcode is not in Scotland, we can't match you with a local volunteer centre" }
                                        },
                                        "#postcode-wrapper": {
                                          addClass: [ "has-error" ],
                                        },
                                        "#postcode-validation-icon": {
                                          addClass: [ "fa-times", "text-error" ],
                                          removeClass: [ "loading", "fa-check", "text-primary", "text-success" ]
                                        }
                                      }
                                    }
                                  ]
                                },
                                scotland: {
                                  tasks: [
                                    {
                                      type: "elementManipulator",
                                      config: {
                                        ">": {
                                          value: { __template: "{{{data.postcodeLookup.[0].place}}}" }
                                        },
                                        "#local_authority": {
                                          value: { __template: "{{{data.postcodeLookup.[0].local_authority}}}" }
                                        },
                                        "#coordinates": {
                                          value: { __template: "{{{data.postcodeLookup.[0].coordinates}}}" }
                                        },
                                        "#constituency": {
                                          value: { __template: "{{{data.postcodeLookup.[0].constituency}}}" }
                                        },
                                        "#nuts_3": {
                                          value: { __template: "{{data.postcodeLookup.[0].nuts_3}}" }
                                        },
                                        "#ward": {
                                          value: { __template: "{{{data.postcodeLookup.[0].ward}}}" }
                                        },
                                        "#simd_datazone": {
                                          value: { __template: "{{{data.postcodeLookup.[0].simd_datazone}}}" }
                                        },
                                        "#simd_rank": {
                                          value: { __template: "{{{data.postcodeLookup.[0].simd_rank}}}" }
                                        },
                                        "#postcode-validation-message": {
                                          addClass: [ "hidden" ],
                                          contents: { __template: "" }
                                        },
                                        "#postcode-wrapper": {
                                          removeClass: [ "has-error" ]
                                        },
                                        "#postcode-validation-icon": {
                                          addClass: [ "fa-check", "text-success" ],
                                          removeClass: [ "loading", "fa-times", "text-primary", "text-error" ]
                                        }
                                      }
                                    }
                                  ]
                                }
                              }
                            }
                          }
                        ]
                      }
                    }
                  }
                }
              ]
            }
          }
        }
      },
      "validate-details-form"
    ]
  }
}
</script>
